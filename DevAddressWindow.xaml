<Window x:Class="TokenMonitorApp.DevAddressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить адрес разработчика" Height="160" Width="460">
    <StackPanel Margin="12">
        <TextBlock Text="Адрес разработчика (Solana):"/>
        <TextBox x:Name="AddressBox"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="OK" Width="120" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Отмена" Width="120" Margin="8,0,0,0" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
