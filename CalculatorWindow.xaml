<Window x:Class="TokenMonitorApp.CalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SOL Calculator" Height="480" Width="420"
        Background="#f8f8f8">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Button x:Name="ToggleDirectionButton"
                    Content="🔁 Рубли → SOL"
                    FontWeight="Bold"
                    Click="ToggleDirection_Click"
                    Height="32" Margin="0,0,0,10"/>

            <TextBox x:Name="InputBox"
                     Grid.Row="1"
                     FontSize="14"
                     Height="30"
                     VerticalContentAlignment="Center"
                     TextChanged="InputBox_TextChanged"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock x:Name="ResultText"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="DarkSlateBlue"
                           VerticalAlignment="Center"/>
                <Button Content="📋"
                        Margin="10,0,0,0"
                        Padding="4,2"
                        FontSize="14"
                        Click="CopyResult_Click"/>
            </StackPanel>

            <TextBlock Grid.Row="3"
                       Text="🔖 Сохранённые адреса:"
                       FontWeight="Bold"
                       Margin="0,20,0,5"/>

            <ItemsControl x:Name="SavedAddressesList" Grid.Row="4">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                            <TextBlock Text="{Binding}" VerticalAlignment="Center" FontSize="13" Width="250"/>
                            <Button Content="❌" Width="30" Height="22" 
                                    Click="RemoveAddress_Click" 
                                    Tag="{Binding}" Margin="10,0,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <TextBox x:Name="WalletAddressBox"
                     Grid.Row="5"
                     Height="30"
                     VerticalContentAlignment="Center"
                     Margin="0,0,0,10"
                     FontSize="14"/>

            <Button Content="☆ Закрепить адрес"
                    Height="28"
                    Width="150"
                    Grid.Row="5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="PinAddress_Click"/>

            <StackPanel Grid.Row="6" Orientation="Vertical" Margin="0,10,0,0">
                <Button Content="🔎 Проверить баланс"
                        Height="32"
                        Width="200"
                        HorizontalAlignment="Left"
                        Click="CheckBalance_Click"/>
                <TextBlock x:Name="WalletBalanceResult"
                           FontSize="14"
                           Foreground="DarkGreen"
                           TextWrapping="Wrap"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>

