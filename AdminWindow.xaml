<Window x:Class="TokenMonitorApp.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Админ" Height="300" Width="400">
    <StackPanel Margin="10">
        <Button x:Name="generateKeyButton" Content="Сгенерировать ключ (7 дней)" Click="GenerateKeyButton_Click"/>
        <TextBox x:Name="keyOutput" IsReadOnly="True"/>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="revokeKeyBox" Width="250"/>
            <Button Content="Отозвать" Click="RevokeButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
