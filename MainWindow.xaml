<Window x:Class="TokenMonitorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BountyW" Height="800" Width="500"
        Background="#f8f8f8" WindowStartupLocation="CenterScreen"
        Icon="acess/logo.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Border Background="#333" Padding="20" MinHeight="100">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>


                <!-- Старт / Очистка / Стоп -->
                <StackPanel Orientation="Vertical" Grid.Column="0" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Button x:Name="StartButton"
                Content="▶ START"
                Width="80"
                Height="30"
                Click="StartButton_Click"/>

                        <Button x:Name="ClearButton"
                Content="🗑"
                Width="30"
                Height="30"
                Margin="10,0,0,0"
                Click="ClearTokens_Click"/>
                    </StackPanel>

                    <Button x:Name="StopButton"
            Content="⏹ STOP"
            Width="120"
            Height="30"
            Click="StopButton_Click"
            IsEnabled="False"/>
                </StackPanel>


                <!-- Курс и статус -->
                <StackPanel Orientation="Vertical" Grid.Column="1" Margin="20,0,0,0">
                    <TextBlock x:Name="SolPriceLabel"
                               Text="💲 SOL: --"
                               Foreground="LimeGreen"
                               FontWeight="Bold"
                               FontSize="16"
                               Height="28"/>
                    <Label x:Name="StatusLabel"
                           Content="STATUS: ⏳ Ожидание запуска..."
                           FontSize="13"
                           Foreground="DarkGreen"
                           Padding="0"
                           BorderThickness="0"
                           Background="Transparent"
                           Height="16"/>
                </StackPanel>

                <!-- Счетчики + Settings -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10,0,0,0">
                    <TextBlock x:Name="TotalCheckedLabel"
                               Text="Total checked: 0"
                               Foreground="White"
                               FontSize="12"
                               Margin="0,0,0,2"/>
                    <TextBlock x:Name="ResultLabel"
                               Text="🎯 Result: 0"
                               Foreground="#00E5FF"
                               FontWeight="Bold"
                               FontSize="14"
                               Margin="0,0,0,10"/>
                    <Button Content=" Calculator "
                            Width="100"
                            Margin="0,0,0,5"
                            Click="OpenCalculator_Click"/>
                    <Button x:Name="SettingsButton"
                            Content="⚙ Settings"
                            Width="100"
                            HorizontalAlignment="Right"
                            Click="SettingsButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Зона токенов -->
        <Border Grid.Row="1"
                Background="#c0c0c0"
                Margin="10"
                Padding="10"
                CornerRadius="10"
                BorderBrush="#aaa"
                BorderThickness="1.5">
            <ScrollViewer VerticalScrollBarVisibility="Hidden" PanningMode="VerticalOnly">
                <ScrollViewer.Resources>
                    <Style TargetType="ScrollBar">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#66AAAAAA"/>
                        <Setter Property="Width" Value="6"/>
                    </Style>
                </ScrollViewer.Resources>
                <StackPanel x:Name="TokensPanel"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
